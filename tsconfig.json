{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "lib": [
            "ES2019"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": false,
        "inlineSourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}